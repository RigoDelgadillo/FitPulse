@model IEnumerable<PIAProWeb.Models.dbModels.Ejercicio>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="css/index.css">
<h1>Index</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create</a>
    
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGruposMusculares)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdGruposMusculares)
            </td>
            <td>
                    
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdEjercicio">Edit</a>
                    <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.IdEjercicio">Details</a>
                 
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdEjercicio">Delete</a>
              
            </td>
        </tr>
}
    </tbody>
</table>
